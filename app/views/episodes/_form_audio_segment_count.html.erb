<%= turbo_frame_tag "episode-segment-count" do %>
  <div class="form-floating" data-controller="dynamic-form">
    <%= form.number_field :segment_count, min: 1, max: 10, data: {action: "dynamic-form#change"} %>
    <%= form.label :segment_count %>

    <button type="button" class="help-text" data-bs-toggle="popover" data-bs-content="<%= t(".help") %>">
      <span class="material-icons">help</span>
    </button>

    <%# update contents turbo-frame when segment count changes %>
    <a hidden href="<%= edit_episode_path(episode) %>" data-dynamic-form-target="link" data-turbo-frame="episode-audio"></a>
  </div>
<% end %>
