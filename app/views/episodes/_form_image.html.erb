<%= turbo_frame_tag "episode-form-image", data: {controller: "morphdom"} do %>
  <% episode.images.build if episode.images.empty? %>

  <%= form.fields_for :images, include_id: false do |fields| %>
    <% path = episode_destroy_image_path(episode, fields) %>

    <%= render "images/form", form: fields, image: fields.object, delete_path: path %>
  <% end %>
<% end %>
