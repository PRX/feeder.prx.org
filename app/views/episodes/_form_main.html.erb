<div class="col-12 mb-4 border-0">
    <div class="form-floating input-group">
      <%= form.text_field :title %>
      <%= form.label :title %>
      <%= field_help_text t(".help.title") %>
    </div>
</div>

<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :clean_title %>
    <%= form.label :clean_title %>
    <%= field_help_text t(".help.clean_title") %>
  </div>
</div>

<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :subtitle %>
    <%= form.label :subtitle %>
    <%= field_help_text t(".help.subtitle") %>
  </div>
</div>

<div class="col-12 mb-4">
  <div class="card shadow border-0">
    <div class="card-header card-header-secondary d-flex justify-content-between">
      <h5 class="card-title flex-grow-1"><%= t("helpers.label.episode.description") %></h5>
      <%= help_text t(".help.description") %>
    </div>
    <div class="card-body">
      <%= form.trix_editor :description %>
    </div>
  </div>
</div>

<div class="col-12 mb-4" data-controller="toggle-field">
  <div class="form-check <%= "d-none" if episode.summary.present? %>">
    <%= form.check_box :add_itunes_summary, class: "form-check-input", name: nil, checked: false, data: {toggle_field_target: "check", action: "toggle-field#changeCheck"} %>
    <div class="d-flex align-items-center">
      <%= form.label :add_itunes_summary %>
      <%= help_text t(".help.summary") %>
    </div>
  </div>

  <div class="card shadow border-0 <%= "d-none" unless episode.summary.present? %>">
    <div class="card-header card-header-secondary d-flex justify-content-between">
      <h5 class="card-title flex-grow-1"><%= t("helpers.label.episode.summary") %></h5>
    </div>
    <div class="card-body">
      <%# TODO: data: {toggle_field_target: "field", action: "blur->toggle-field#changeField"} %>
      <%= form.trix_editor :summary %>
    </div>
  </div>
</div>

<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :production_notes %>
    <%= form.label :production_notes %>
    <%= field_help_text t(".help.production_notes") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.select :explicit, podcast_explicit_options, {include_blank: true} %>
    <%= form.label :explicit %>
    <%= field_help_text t(".help.explicit") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.select :itunes_type, episode_itunes_type_options %>
    <%= form.label :itunes_type %>
    <%= field_help_text t(".help.itunes_type") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.number_field :season_number %>
    <%= form.label :season_number %>
    <%= field_help_text t(".help.season_number") %>>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.number_field :episode_number %>
    <%= form.label :episode_number %>
    <%= field_help_text t(".help.episode_number") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :author_name %>
    <%= form.label :author_name %>
    <%= field_help_text t(".help.author_name") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :author_email %>
    <%= form.label :author_email %>
    <%= field_help_text t(".help.author_email") %>
  </div>
</div>
