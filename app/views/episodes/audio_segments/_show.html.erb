<%= turbo_frame_tag "episode-form-audio-segments-#{position}" do %>
  <% if content.present? %>
    <%= form.fields_for :contents, content, child_index: position do |fields| %>
      <% begin %>
        <% if content.new_record? %>
          <%= render "episodes/audio_status/new", form: fields, content: content %>
        <% elsif content.marked_for_destruction? %>
          <%= render "episodes/audio_status/destroy", form: fields, content: content %>
        <% else %>
          <%= render "episodes/audio_status/#{content.status}", form: fields, content: content %>
        <% end %>
      <% rescue ActionView::MissingTemplate %>
        <%= render "episodes/audio_status/unknown", form: fields, content: content %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
