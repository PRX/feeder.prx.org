<% content_for :tabs do %>
  <div class="list-group d-flex col mw-100">
    <% if @episode.persisted? %>
      <% if Rails.env.development? && @episode.published? %>
        <%= tab_link_to "Overview", episode_metrics_path(@episode.guid) %>
      <% end %>
      <%= tab_link_to "Settings", edit_episode_path(@episode), class: "text-truncate", active: episode_metadata_active? %>
      <%= render "episode_media/tab", episode: @episode %>
      <%= tab_link_to t(".transcript"), episode_transcripts_path(@episode) %>
      <%= tab_link_to t(".player"), episode_player_path(@episode) %>
    <% else %>
      <%= tab_link_to t(".new"), new_podcast_episode_path(@podcast), active: true %>
    <% end %>
  </div>
<% end %>
