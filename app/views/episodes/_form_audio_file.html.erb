<%= turbo_frame_tag "episode-form-audio-#{media_resource.position}" do %>
  <% if media_resource.new_record? || media_resource.marked_for_destruction? %>
    <%= render "episodes/audio/new", form: form, episode: episode, content: media_resource %>
  <% else %>
    <% case media_resource.status %>
    <% when "started", "created", "processing", "retrying" %>
      <%= render "episodes/audio/processing", form: form, episode: episode, content: media_resource %>
    <% when "complete" %>
      <%= render "episodes/audio/complete", form: form, episode: episode, content: media_resource %>
    <% else %>
      <%= render "episodes/audio/error", form: form, episode: episode, content: media_resource %>
    <% end %>
  <% end %>
<% end %>
