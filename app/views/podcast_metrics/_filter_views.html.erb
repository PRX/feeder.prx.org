<div class="btn-group" data-controller="apex-toggles" data-apex-toggles-apex-downloads-outlet=".has-episodes">
  <button class="btn btn-primary dropdown-toggle" type="button" id="view-options" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
    Breakdown
  </button>
  <ul class="dropdown-menu" aria-labelledby="view-options">
    <% chart_breakdown_options.each do |option| %>
      <li>
        <button class="dropdown-item" data-action="click->apex-toggles#changeBreakdown click->apex-nav#changeBreakdown" type="button" value="<%= option[1] %>"><%= option[0] %></button>
      </li>
    <% end %>
  </ul>
</div>
