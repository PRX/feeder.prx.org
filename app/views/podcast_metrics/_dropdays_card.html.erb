<%= turbo_frame_tag "dropdays" do %>
  <div class="row d-flex flex-wrap gx-4"
    data-controller="apex-dropdays"
    data-apex-dropdays-id-value="<%= SecureRandom.uuid %>"
    data-apex-dropdays-series-data-value="<%= episode_dropdays.to_json %>"
    data-apex-dropdays-range-value="<%= dropday_range %>">
    <div class="col">
      <div data-apex-dropdays-target="chart" data-chart="dropdays"></div>
    </div>
    <div class="col align-items-center">
      <div class="col my-4">
        <table class="table table-striped shadow rounded">
          <thead>
            <tr class="table-secondary">
              <th>Episode</th>
              <th>Publish Date</th>
              <th><%= "#{dropday_range} Day Downloads" %></th>
              <th>All-time</th>
            </tr>
          </thead>
          <tbody>
            <% episode_dropdays.each do |ep| %>
              <% sum = sum_rollups(ep[:rollups]) %>
              <% total = sum_rollups(ep[:totals]) %>
              <% title = ep[:ep][:title] %>
              <tr class="align-items-center">
                <td class="d-flex align-items-center">
                  <input id="<%= title %>" type="checkbox" class="form-check-input mt-0 me-2" checked="true" data-action="click->apex-dropdays#toggleSeries" data-series="<%= title %>">
                  <span class="material-icons me-2" aria-label="hidden" style="color: <%= ep[:color] %>">circle</span>
                  <span class="text-nowrap overflow-hidden"><%= title %></span>
                </td>
                <td><%= ep[:ep][:published_at].strftime("%Y-%m-%d") %></td>
                <td><% if sum %><%= sum %><% else %>&mdash;<% end %></td>
                <td><% if total %><%= total %><% else %>&mdash;<% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col my-4">
          <%= paginate episodes, param_name: :episode_dropdays %>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>
