<%= form_with(url: podcast_metrics_path(podcast: podcast, date_start: date_start, date_end: date_end, interval: interval), method: :get, id: "metrics") do |form| %>
  <div class="form-floating">
    <%= form.select :interval, interval_options, {selected: interval}, value: interval, data: {action: "apex-nav#updateInterval", apex_nav_path_param: path}, class: "form-select form-select-sm" %>
    <%= form.label :interval %>
  </div>
<% end %>
