{
  "$schema": "http://json-schema.org/schema#",
  "title": "Episode",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "link": {
      "description": "A URL for an HTML webpage specifically for this episode",
      "type": "string",
      "format": "uri"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "enclosure": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "length": {
          "type": "number"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["url", "length", "type"]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": ["name", "email"]
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "explicit": {
      "type": "string",
      "enum": ["yes", "clean"]
    }
  },
  "required": ["title", "enclosure"]
}
