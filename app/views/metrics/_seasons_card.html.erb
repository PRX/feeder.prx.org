<%= turbo_frame_tag "seasons" do %>
  <div class="position-relative">
    <ul class="list-group list-group-flush">
      <% seasons.map do |season| %>
        <li class="list-group-item d-flex justify-content-between">
          <span class="z-1"><%= season[0] %></span>
          <span class="z-1"><%= number_with_delimiter(season[1]) || 0 %></span>
        </li>
      <% end %>
    </ul>
    <div class="position-absolute top-50 start-50 translate-middle w-100 h-100 z-0 apex-color-mode"
      data-controller="apex-chart"
      data-apex-chart-id-value="podcast-seasons-chart"
      data-apex-chart-downloads-value="<%= seasons.to_json %>"
      data-apex-chart-series-type-value="downloads"
      data-apex-chart-chart-type-value="sparkbar">
      <div data-apex-chart-target="chart"></div>
    </div>
  </div>
<% end %>
