<div class="row d-flex gx-1">
  <div class="col form-floating">
    <%= form.select :interval, interval_options, {selected: interval}, value: interval, data: {action: "change->click#submit"}, class: "form-select form-select-sm" %>
    <%= form.label :interval %>
  </div>
  <div class="col form-floating btn-group">
    <%= form.text_field nil, value: label_for_date_preset(date_preset), readonly: true, class: "form-control form-control-sm" %>
    <%= form.label :date_preset, "Date Preset" %>
    <%= form.hidden_field :date_preset, value: date_preset, data: {apex_nav_target: "datePreset", action: "change->click#submit"} %>
    <%= form.hidden_field :date_start, value: nil, data: {apex_nav_target: "startDate"} %>
    <%= form.hidden_field :date_end, value: nil, data: {apex_nav_target: "endDate"} %>

    <button class="btn btn-sm btn-outline-light dropdown-toggle dropdown-toggle-split" type="button" id="date-range-options" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="date-range-options">
      <% date_preset_options(episode).each do |option| %>
        <li>
          <button class="dropdown-item <%= active_preset(option[1].to_s, date_preset) %>" type="button" data-action="apex-nav#updateDatePreset" value="<%= option[1].to_s %>">
            <%= option[0] %>
          </button>
        </li>
      <% end %>
    </ul>
  </div>
</div>
