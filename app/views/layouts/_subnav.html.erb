<% if !@podcast || policy(@podcast).show? %>
  <div class="prx-app-bar navbar justify-content-start align-items-stretch p-0 bg-white">

    <%= render "podcast_switcher/dropdown" %>

    <nav class="prx-app-nav navbar-nav flex-row justifty-content-start">
      <% if @podcast&.new_record? %>
        <%= active_link_to "Settings", new_podcast_path, class: "nav-link" %>
      <% elsif @podcast %>
        <%= active_link_to "Podcast", podcast_path(@podcast), active: :exact, class: "nav-link" %>
        <%= active_link_to "Settings", edit_podcast_path(@podcast), active: podcast_settings_active?, class: "nav-link" %>
        <%= active_link_to "Episodes", podcast_episodes_path(@podcast), active: /\/episodes/, class: "nav-link" %>
        <%= active_link_to "Feeds", podcast_feeds_path(@podcast), active: /\/feeds/, class: "nav-link" %>
      <% end %>
    </nav>
  </div>
<% end %>
