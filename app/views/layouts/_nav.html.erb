<nav class="prx-dovetail-nav navbar navbar-expand-sm navbar-dark">
  <div class="container-fluid pe-0">
    <%= link_to t(".dovetail"), main_app.podcasts_path, class: "navbar-brand" %>

    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to t(".feeder"), main_app.podcasts_path, class: "nav-link active" %>
      </li>

      <% if current_user_app?("augury") %>
        <li class="nav-item">
          <%= link_to t(".augury"), current_user_app("augury"), class: "nav-link" %>
        </li>
      <% end %>

      <% if current_user_app?("metrics") %>
        <li class="nav-item">
          <%= link_to t(".metrics"), current_user_app("metrics"), class: "nav-link" %>
        </li>
      <% end %>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="nav-help-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <span class="material-icons align-middle">help</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="nav-help-dropdown">
          <li><%= link_to t(".help"), "https://help.prx.org", class: "dropdown-item" %></li>
          <li><%= link_to t(".status"), "https://status.prx.org", class: "dropdown-item" %></li>
          <li><%= link_to t(".terms"), "https://exchange.prx.org/terms-of-use", class: "dropdown-item" %></li>
          <li><%= link_to t(".attribution"), "https://dovetail.prx.org/attribution", class: "dropdown-item" %></li>
          <li><%= link_to t(".privacy"), "https://exchange.prx.org/privacy-policy", class: "dropdown-item" %></li>
          <li><%= link_to t(".home"), "https://prx.org/", class: "dropdown-item" %></li>
        </ul>
      </li>

      <% if current_user %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="nav-user-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <% if current_user_image? %>
              <img src="<%= current_user_image %>" class="nav-avatar" alt="<%= current_user_name %>'s avatar">
            <% else %>
              <span class="material-icons align-middle" aria-label="<%= t(".account") %>">account_circle</span>
            <% end %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="nav-user-dropdown">
            <li class="dropdown-username text-center"><%= current_user_name %></li>
            <li class="text-center">
              <%= link_to t(".id"), current_user_id_profile, class: "dropdown-button btn btn-info" %>
            </li>
            <li class="text-center">
              <%= link_to "Reload", main_app.refresh_path, data: {turbo: false}, class: "dropdown-link" %>
            </li>
            <li class="text-center">
              <%= link_to "Logout", main_app.logout_path, data: {turbo: false}, class: "dropdown-link" %>
            </li>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
