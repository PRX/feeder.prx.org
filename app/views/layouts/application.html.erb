<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? content_for(:title) : "Feeder" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= uploads_meta_tags %>

    <link rel="icon" href="https://media.prx.org/favicon/icon-32.ico" sizes="any">
    <link rel="icon" href="https://media.prx.org/favicon/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="https://media.prx.org/favicon/icon-180.png">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-controller="blank-field tooltip">
    <header>
      <%= render "layouts/nav" %>
      <%= render "layouts/subnav" if current_user %>
    </header>

    <%= render "layouts/alerts" %>

    <% if content_for? :tabs %>
      <div class="container-fluid">
        <div class="row full-vertical-height">
          <aside class="sidetabs col-sm-12 col-md-3 col-xl-2">
            <%= yield :tabs %>
          </aside>
          <main class="tab-content col-sm-12 col-md-9 col-xl-10 bg-white"><%= yield %></main>
        </div>
      </div>
    <% else %>
      <main class="container-xl">
        <%= yield %>
      </main>
    <% end %>
  </body>
</html>
