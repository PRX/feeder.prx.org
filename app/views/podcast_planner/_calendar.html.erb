<div class="col col-xl-4 <%= "d-none" if index >= range %>" data-pager-target="page">
  <%= month_calendar(start_date: start_date) do |date| %>
    <% if date_is_in_month?(date, start_date.month) %>
      <%= date.day %>

      <% disabled = !date_is_in_dates?(date, @planner.dates) %>
      <%= form.hidden_field :selected_dates, multiple: true, value: date.to_date, disabled: disabled, data: {planner_target: "counter"} %>
      <%= form.hidden_field :selected_titles, multiple: true, value: l(date, format: :full_month), disabled: disabled %>
    <% end %>
  <% end %>
</div>
