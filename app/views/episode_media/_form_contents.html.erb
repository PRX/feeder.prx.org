<div class="prx-uploads col-12 mb-4">
  <div class="card shadow border-0">
    <div class="card-header card-header-info d-flex justify-content-between">
      <h2 class="card-title h5"><%= t(".title") %></h2>
    </div>
    <div class="card-body pb-0">
      <%= form.fields_for :contents, episode.build_contents, include_id: false do |fields| %>
        <%= turbo_frame_tag "episode-media-contents-#{fields.object.position}", data: {morph: false} do %>
          <%= render "episode_media/media/media", form: fields, episode: episode, media: fields.object %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
