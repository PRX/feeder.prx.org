<%= turbo_frame_tag "podcast-form-feed-image", data: {controller: "morphdom"} do %>
  <%= form.fields_for :default_feed do |f1| %>
    <% f1.object.feed_images.build if f1.object.feed_images.empty? %>

    <%= f1.fields_for :feed_images, include_id: false do |f2| %>
      <% path = podcast_destroy_image_path(podcast, f1, f2) %>

      <%= render "images/form", form: f2, image: f2.object, delete_path: path %>
    <% end %>
  <% end %>
<% end %>
