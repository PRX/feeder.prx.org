<% turbo_refreshes_with(method: :morph, scroll: :preserve) %>

<% content_for :title, t(".title") %>

<%= render "podcast_filters" %>

<%= turbo_frame_tag "podcasts" do %>
  <section class="container position-relative">
    <div class="col-lg-12">
      <div class="dashboard-list mb-4 shadow">
        <%= render partial: "podcasts/podcast", collection: @podcasts, cached: true %>
      </div>
    </div>

    <div class="my-4">
      <%= paginate @podcasts %>
      <%= page_entries_info @podcasts %>
    </div>

    <div class="loading-overlay prx-show-busy">
      <div class="spinner-border" role="status">
        <span class="visually-hidden"><%= t(".loading") %>...</span>
      </div>
    </div>
  </section>
<% end %>
