  <div class="form-floating">
    <%= form.text_field :link %>
    <%= form.label :link %>
    <a class="help-text" href="#" data-bs-toggle="tooltip" data-bs-title="<%= t(".help.link") %>"><span class="material-icons">help</span></a>
  </div>
</div>

