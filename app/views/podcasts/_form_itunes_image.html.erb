<%= turbo_frame_tag "podcast-form-itunes-image", data: {controller: "morphdom"} do %>
  <%= form.fields_for :default_feed do |f1| %>
    <% f1.object.itunes_images.build if f1.object.itunes_images.empty? %>

    <%= f1.fields_for :itunes_images, include_id: false do |f2| %>
      <% path = podcast_destroy_image_path(podcast, f1, f2) %>
      <% rpath = podcast_retry_image_path(podcast, f1, f2) %>

      <%= render "images/form", form: f2, image: f2.object, delete_path: path, retry_path: rpath %>
    <% end %>
  <% end %>
<% end %>
