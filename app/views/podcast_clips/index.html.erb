<% turbo_refreshes_with(method: :morph, scroll: :preserve) %>

<% content_for :title, t(".title", title: @podcast.title) %>

<%= render "filters" %>

<%= turbo_frame_tag "clips-list" do %>
  <section class="container position-relative">
    <div class="col-lg-12">
      <div class="dashboard-list mb-4 shadow">
        <%= render partial: "podcast_clips/clip", collection: @clips, cached: false %>
      </div>
    </div>

    <div class="my-4">
      <%= paginate @clips %>
      <%= page_entries_info @clips, entry_name: "clip" %>
    </div>

    <div class="loading-overlay prx-show-busy">
      <div class="spinner-border" role="status">
        <span class="visually-hidden"><%= t(".loading") %>...</span>
      </div>
    </div>
  </section>
<% end %>
