<% content_for :title, t(".title", title: @podcast.title, id: @import.id) %>

<%= render "podcasts/tabs" %>

<%= turbo_frame_tag "imports-show", data: {controller: "morphdom"} do %>
  <section class="container">
    <div class="col-lg-12">
      <div class="row my-4 mx-2">
        <div class="col-lg-8">
          <%= render "episode_import_filters", import: @import %>
          <%= render "episode_imports", episode_imports: @episode_imports %>
        </div>
        <div class="col-lg-4 d-grid align-content-start gap-3">
          <div class="row">
            <div class="col-12">
              <%= render "import_status", import: @import %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
