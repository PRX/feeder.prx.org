<tr>
  <td><%= import.id %></td>
  <td><%= link_to t("helpers.label.podcast_import.statuses.#{import.status}"), podcast_import_path(import.podcast_id, import), data: {turbo_frame: "_top"} %></td>
  <td class="align-middle">
    <% if import.feed_episode_count.present? %>
      <%= render "import_progress_bar", import: import %>
    <% else %>
      <%= render "import_spinner" %>
    <% end %>
  </td>
  <td><%= import.episode_imports.status_complete.count %></td>
  <td><%= import.url %></td>
  <td><%= local_time_ago(import.created_at) %></td>

  <% if import.undone? %>
    <%# just keep polling until the import finishes %>
    <%= link_to "", request.fullpath, class: "d-none", data: {controller: "polling"} %>
  <% end %>
</tr>
