<%= turbo_frame_tag "feed-form-image", data: {controller: "morphdom"} do %>
  <% feed.feed_images.build if feed.feed_images.empty? %>

  <%= form.fields_for :feed_images, include_id: false do |fields| %>
    <% dpath = feed_destroy_image_path(feed, fields) %>
    <% rpath = feed_retry_image_path(feed, fields) %>

    <%= render "images/form", form: fields, image: fields.object, delete_path: dpath, retry_path: rpath %>
  <% end %>
<% end %>
