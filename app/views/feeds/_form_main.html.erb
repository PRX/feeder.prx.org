      </div>
    </div>

    <div class="col-3">
      <div class="form-floating">
        <%= form.select :audio_format, audio_channel_options %>
        <%= form.label :audio_format %>
      </div>
    </div>

    <div class="col-3">
      <div class="form-floating">
        <%= form.select :audio_format, audio_sample_options %>
        <%= form.label :audio_format %>
      </div>
    </div>
  </div>
</div>
