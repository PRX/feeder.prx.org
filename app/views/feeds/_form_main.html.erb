<% if feed.default? %>
  <div class="col-12 mb-4">
    <div class="form-floating input-group">
      <%= form.text_field :label, disabled: true %>
      <%= form.label :label, required: true %>
    </div>
  </div>
<% else %>
  <div class="col-6 mb-4">
    <div class="form-floating input-group">
      <%= form.text_field :label %>
      <%= form.label :label, required: true %>
      <%= field_help_text t(".help.label") %>
    </div>
  </div>

  <div class="col-6 mb-4">
    <div class="form-floating input-group">
      <%= form.text_field :title %>
      <%= form.label :title %>
      <%= field_help_text t(".help.title") %>
    </div>
  </div>

  <div class="col-6 mb-4">
    <div class="form-floating input-group">
      <% data = {action: "keyup->feed-link#updateSlug", confirm_with: t(".confirm.slug")} %>
      <% data[:confirm_field_target] = "field" if feed.persisted? %>
      <%= form.text_field :slug, data: data %>
      <%= form.label :slug, required: true %>
      <%= field_help_text t(".help.slug") %>
    </div>

    <div class="form-text">
      <a href="<%= feed.published_url(false) %>" target="_blank" class="d-none" data-feed-link-target="link"><%= feed.published_url(false) %></a>
    </div>
  </div>
<% end %>

