<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :feed_link, value: feed.published_url, disabled: true, data: {feed_link_target: "link"} %>
    <%= form.label :feed_link %>
    <%= field_link feed.published_url(true) %>
  </div>
</div>

<% unless feed.default? %>
  <div class="col-12 mb-4">
    <div class="form-floating input-group">
      <%= form.text_field :title %>
      <%= form.label :title %>
      <%= field_help_text t(".help.title") %>
    </div>
  </div>

  <div class="col-6 mb-4">
    <div class="form-floating input-group">
      <% data = {action: "keyup->feed-link#updateSlug", confirm_field_target: "field", confirm_with: t(".confirm.slug")} %>
      <%= form.text_field :slug, data: data %>
      <%= form.label :slug %>
      <%= field_help_text t(".help.slug") %>
    </div>
  </div>
<% end %>

<div class="<%= feed.default? ? "col-12" : "col-6" %> mb-4">
  <div class="form-floating input-group">
    <% data = {action: "keyup->feed-link#updateFileName", confirm_field_target: "field", confirm_with: t(".confirm.file_name")} %>
    <%= form.text_field :file_name, data: data %>
    <%= form.label :file_name %>
    <%= field_help_text t(".help.file_name") %>
  </div>
</div>

<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <% with = t(".confirm.url") %>
    <% delete = t(".confirm.url_delete", published_url: feed.published_url) %>
    <% data = {confirm_field_target: "field", confirm_with: with, confirm_delete: delete} %>
    <%= form.text_field :url, data: feed.url_was.present? ? data : {} %>
    <%= form.label :url %>
    <%= field_help_text t(".help.url", published_url: feed.published_url) %>
  </div>
</div>

<div class="col-12 mb-4">
  <div class="form-floating input-group">
    <% with = t(".confirm.new_feed_url") %>
    <% create = t(".confirm.new_feed_url_create") %>
    <% delete = t(".confirm.new_feed_url_delete") %>
    <% data = {confirm_field_target: "field", confirm_with: with, confirm_create: create, confirm_delete: delete} %>
    <%= form.text_field :new_feed_url, data: data %>
    <%= form.label :new_feed_url %>
    <%= field_help_text t(".help.new_feed_url") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.text_field :enclosure_prefix %>
    <%= form.label :enclosure_prefix %>
    <%= field_help_text t(".help.enclosure_prefix") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.select :episode_offset_seconds, episode_offset_options, include_blank: true %>
    <%= form.label :episode_offset_seconds %>
    <%= field_help_text t(".help.episode_offset_seconds") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.number_field :display_episodes_count %>
    <%= form.label :display_episodes_count %>
    <%= field_help_text t(".help.display_episodes_count") %>
  </div>
</div>

<div class="col-6 mb-4">
  <div class="form-floating input-group">
    <%= form.number_field :display_full_episodes_count %>
    <%= form.label :display_full_episodes_count %>
    <%= field_help_text t(".help.display_full_episodes_count") %>
  </div>
</div>
