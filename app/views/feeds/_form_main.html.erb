<div class="col-12 mb-4 prx-field-group">
  <div class="form-floating">
    <%= form.text_field :feed_link, value: feed.published_url, disabled: true %>
    <%= form.label :feed_link %>
  </div>

  <%= link_to(feed.published_url, class: "prx-btn-help", target: :_blank) do %>
    <span class="material-icons">link</span>
  <% end %>
</div>

<div class="col-12 mb-4 prx-field-group">
  <div class="form-floating">
    <%= form.text_field :file_name %>
    <%= form.label :file_name %>
  </div>

  <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.file_name") %>"><span class="material-icons">help</span></button>
</div>

<% unless feed.default? %>
  <div class="col-12">
    <div class="mb-4 prx-field-group">
      <div class="form-floating">
        <%= form.text_field :slug %>
        <%= form.label :slug %>
      </div>

      <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.slug") %>"><span class="material-icons">help</span></button>
    </div>
  </div>

  <div class="col-12">
    <hr>
    <h3><%= t(".headers.overrides") %></h3>
    <p><%= t(".help.overrides") %></p>
    <div class="mb-4">
      <div class="form-floating">
        <%= form.text_field :title %>
        <%= form.label :title %>
      </div>
    </div>

    <div class="mb-4 prx-field-group">
      <div class="form-floating">
        <%= form.text_field :subtitle %>
        <%= form.label :subtitle %>
      </div>

      <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.subtitle") %>"><span class="material-icons">help</span></button>
    </div>

    <div class="mb-4 prx-field-group">
      <div class="form-floating">
        <%= form.text_area :description %>
        <%= form.label :description %>
      </div>

      <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.description") %>"><span class="material-icons">help</span></button>
    </div>

    <div class="mb-4 prx-field-group">
      <div class="form-floating">
        <%= form.text_area :summary %>
        <%= form.label :summary %>
      </div>

      <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.summary") %>"><span class="material-icons">help</span></button>
    </div>
  </div>

  <div class="col-12">
    <hr>
    <h3><%= t(".headers.private") %></h3>
    <div class="prx-field-group">
      <div>
        <%= form.check_box :private %>
        <%= form.label :private %>
      </div>

      <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.private") %>" data-bs-html="true"><span class="material-icons">help</span></button>
    </div>
  </div>

  <div class="col-12">
    <hr>
    <h3><%= t(".headers.auth_tokens") %></h3>
    <p><%= t(".help.auth_tokens") %></p>
    <%= render "form_auth_tokens", feed: feed, form: form %>
  </div>

  <div class="col-12">
    <hr>
    <h3><%= t(".headers.ad_zones") %></h3>
    <p><%= t(".help.ad_zones") %></p>

    <%= form.check_box :billboard, value: 0 %>
    <%= form.label :billboard, class: "me-2" %>

    <%= form.check_box :house, value: 0 %>
    <%= form.label :house, class: "me-2" %>

    <%= form.check_box :paid, value: 0 %>
    <%= form.label :paid, class: "me-2" %>

    <%= form.check_box :sonic_id, value: 0 %>
    <%= form.label :sonic_id, class: "me-2" %>

  </div>
  <div class="col-12">
    <hr>
  </div>
<% end %>

<div class="col-12 mb-4 prx-field-group">
  <div class="form-floating">
    <%= form.text_field :url %>
    <%= form.label :url %>
  </div>

  <button type="button" class="prx-btn-help" data-bs-toggle="popover" data-bs-content="<%= t(".help.url") %>"><span class="material-icons">help</span></button>
</div>

