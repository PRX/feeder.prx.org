<% content_for :tabs do %>
  <div class="list-group d-flex col">
    <%= tab_link_to "Default Feed", podcast_feed_path(@podcast, @podcast.default_feed) %>

    <% if @podcast.feeds.custom.present? %>
      <% @podcast.feeds.custom.each do |feed| %>
        <%= tab_link_to feed.title.to_s, podcast_feed_path(@podcast, feed) %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Add a Feed", new_podcast_feed_path(@podcast), class: "btn btn-secondary-link" %>
<% end %>
