<template data-audio-breakpoints-target="controlTemplate">
  <tr data-controller="audio-breakpoint tooltip" data-audio-breakpoint-completed-class="status--completed">
    <td>
      <span class="completed-show material-icons text-success">check_circle</span>
      <span class="completed-hide material-icons text-danger">error</span>
    </td>
    <td>
      <span data-audio-breakpoint-target="label">Label Text</span>
    </td>
    <td>
      <button type="button" class="has-start-time-hide btn btn-sm btn-primary text-nowrap" data-action="audio-breakpoint#updateStartTimeToPlayhead">
        <%= t(".insert") %><span class="material-icons" aria-hidden="true">my_location</span>
      </button>
      <div class="has-start-time-show prx-input-group input-group-sm">
        <input class="form-control" placeholder="00:00"
          data-audio-breakpoint-target="startTime"
          data-action="keypress.enter->audio-breakpoint#changeStartTime"
          data-bs-toggle="tooltip"
          data-bs-title="<%= t(".change_start_time") %>">
        <button type="button" class="prx-input-confirm btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".confirm") %>" data-action="audio-breakpoint#changeStartTime">
          <span class="material-icons">done</span>
        </button>
        <button type="button" class="prx-input-confirm-hidden btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".set_playhead") %>" data-action="audio-breakpoint#updateStartTimeToPlayhead">
          <span class="material-icons">my_location</span>
        </button>
        <button type="button" class="has-end-time-hide btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".add_end_time") %>" data-action="audio-breakpoint#addEndTime">
          <span class="material-icons rotate-90">expand</span>
        </button>
      </div>
      <span class="has-end-time-show material-icons rotate-90">expand</span>
      <div class="has-end-time-show prx-input-group input-group-sm">
        <input class="form-control" placeholder="00:00"
          data-audio-breakpoint-target="endTime"
          data-action="keypress.enter->audio-breakpoint#changeEndTime"
          data-bs-toggle="tooltip"
          data-bs-title="<%= t(".change_end_time") %>">
        <button type="button" class="prx-input-confirm btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".confirm") %>" data-action="audio-breakpoint#changeEndTime">
          <span class="material-icons">done</span>
        </button>
        <button type="button" class="prx-input-confirm-hidden btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".set_playhead") %>" data-action="audio-breakpoint#updateEndTimeToPlayhead">
          <span class="material-icons">my_location</span>
        </button>
        <button type="button" class="btn btn-icon btn-icon-borderless btn-primary" data-bs-toggle="tooltip" data-bs-title="<%= t(".remove_end_time") %>" data-action="audio-breakpoint#removeEndTime">
          <span class="material-icons">close</span>
        </button>
      </div>
    </td>
    <td class="justify-content-end">
      <button type="button" class="has-end-time-show btn btn-icon btn-icon-round btn-primary" data-action="audio-breakpoint#play">
        <span class="material-icons">play_arrow</span>
      </button>
      <button type="button" class="has-start-time-show btn btn-icon btn-icon-round btn-primary" data-action="audio-breakpoint#seekTo">
        <span class="material-icons">skip_next</span>
      </button>
    </td>
  </tr>
</template>
