<% url = episode_segmenter_path(episode) %>
<% data = {controller: "unsaved disable", unsaved_changed_value: uncut.changed?, unsaved_confirm_value: t(".confirm")} %>

<%= form_with(url: url, model: uncut, html: {autocomplete: "off"}, data: data) do |form| %>
  <%= form.text_field :ad_breaks, class: "d-none", data: {audio_breakpoints_target: "markersInput"} %>

  <header class="d-flex justify-content-end my-4">
    <% discard_data = {action: "unsaved#discard", unsaved_target: "discard"} %>
    <%= link_to t(".discard"), url, class: "btn btn-discard-changed invisible me-2", data: discard_data %>

    <% submit_data = {disable_with: t(".updating"), turbo_frame: "_top"} %>
    <%= form.submit t(".update"), class: "btn btn-primary", data: submit_data %>
  </header>
<% end %>
